#!/usr/bin/env bash
set -euo pipefail

# Copy common utils
mkdir -p "${BOSH_INSTALL_TARGET}/common"
cp "${BOSH_COMPILE_TARGET}/common/utils.sh" "${BOSH_INSTALL_TARGET}/common"

# Extract oauth2-proxy package
mkdir -p "${BOSH_INSTALL_TARGET}/bin"
tar xzf oauth2-proxy/oauth2-proxy-v7.2.1.linux-amd64.tar.gz
cp "${BOSH_COMPILE_TARGET}/oauth2-proxy-v7.2.1.linux-amd64/oauth2-proxy" "${BOSH_INSTALL_TARGET}/bin/oauth2-proxy"
chmod 755 "${BOSH_INSTALL_TARGET}/bin/oauth2-proxy"
